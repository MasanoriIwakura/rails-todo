<p id="notice"><%= notice %></p>

<h1 class="title">Todos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Contents</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.contents %></td>
        <td><%= check_box_tag 'done', '', todo.done %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button is-danger" %></td>
      </tr>
    <% end %>

    <%= render 'form', todo: @todo %>
  </tbody>
</table>